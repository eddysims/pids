{
  "name": "pids",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "docz dev",
    "build": "docz build",
    "clean": "rm -rf .docz",
    "lint:js": "eslint --ext .js,.jsx,.ts,.tsx .",
